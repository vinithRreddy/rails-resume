<p id="notice"><%= notice %></p>

<h1>Educations</h1>

<table>
  <thead>
    <tr>
      <th>Institute name</th>
      <th>Qualification</th>
      <th>Specification</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Marks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.institute_name %></td>
        <td><%= education.qualification %></td>
        <td><%= education.specification %></td>
        <td><%= education.start_date %></td>
        <td><%= education.end_date %></td>
        <td><%= education.marks %></td>
        <td><%= link_to 'Edit Education', edit_user_education_path(user_id: @user,id: education) %></td>
        <td><%= link_to 'Destroy',user_education_path(user_id: @user,id: education), method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_tag 'New Education',id: "new_education_form" %>
<div id="education_form">
<%= render 'form', education: Education.new() %>
</div>
<%= javascript_pack_tag 'display_education_form' %>